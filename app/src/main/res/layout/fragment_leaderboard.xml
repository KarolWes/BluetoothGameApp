<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leaderboard.LeaderboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_700"
        tools:context=".ui.home.HomeFragment">

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/green_400"
            app:layout_constraintBottom_toTopOf="@+id/buttonRefresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/title_leaderboard"
            android:textAlignment="center"
            android:textColor="@color/gray_500"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonRefresh"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:backgroundTint="@color/gold"
            android:foregroundTint="@color/yellow"
            android:src="@android:drawable/ic_menu_rotate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <ImageView
            android:id="@+id/imageGold"
            android:layout_width="0dp"
            android:layout_height="159dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="#3F51B5"
            android:foregroundTint="#FFEB3B"
            android:src="@drawable/leader_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider"
            app:tint="@color/yellow" />

        <ImageView
            android:id="@+id/imageSilver"
            android:layout_width="126dp"
            android:layout_height="124dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/leader_icon"
            app:layout_constraintEnd_toStartOf="@+id/imageBronze"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageGold"
            app:tint="@color/silver" />

        <ImageView
            android:id="@+id/imageBronze"
            android:layout_width="146dp"
            android:layout_height="124dp"
            android:src="@drawable/leader_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageSilver"
            app:layout_constraintTop_toTopOf="@+id/imageSilver"
            app:tint="@color/beige_800" />

        <TextView
            android:id="@+id/textViewGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="User 1"
            android:textColor="@color/brown_700"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/imageGold"
            app:layout_constraintStart_toStartOf="@+id/imageGold"
            app:layout_constraintTop_toBottomOf="@+id/imageGold" />

        <TextView
            android:id="@+id/textViewSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="User2"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imageSilver"
            app:layout_constraintStart_toStartOf="@+id/imageSilver"
            app:layout_constraintTop_toBottomOf="@+id/imageSilver" />

        <TextView
            android:id="@+id/textViewBronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="User3"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imageBronze"
            app:layout_constraintStart_toStartOf="@+id/imageBronze"
            app:layout_constraintTop_toBottomOf="@+id/imageBronze" />

        <ImageView
            android:id="@+id/imageYou"
            android:layout_width="0dp"
            android:layout_height="81dp"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/textViewYou"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSilver" />

        <TextView
            android:id="@+id/textViewYou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageYou"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageYou"
            app:layout_constraintTop_toTopOf="@+id/imageYou" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>